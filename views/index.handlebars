<img src="http://moziru.com/images/hamburger-clipart-10.png">

<h1 class="title">Eat Da Burger</h1>

<h2 class="burgermenu">Burger Menu</h2>
<ul class="burger-menu">
    {{#each burgers}}
        {{#unless devoured}}
            {{burger_name}}
        {{/unless}}
    {{/each}}     
    <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">Devour Me!</button>   
</ul>

<h2 class="devouredh2">Devoured Burgers</h2>
<ul class="devoured">
    {{#each burgers}}
        {{#if devoured}}
            {{burger_name}}
        {{/if}}
    {{/each}}        
</ul>

<h2 class="add-burger">Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="name" name="burger_name">
    </div>
</form>
<button type="submit" id="button">Add Burger</button>